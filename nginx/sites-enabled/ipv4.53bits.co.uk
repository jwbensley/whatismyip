server {

	listen 80;
	#listen [::]:80;

	root /usr/share/nginx/ipv4.53bits.co.uk/public_html;
	index index.php;
	server_name ipv4.53bits.co.uk;
        access_log /usr/share/nginx/ipv4.53bits.co.uk/logs/access_log;
        error_log /usr/share/nginx/ipv4.53bits.co.uk/logs/error_log;

	gzip off;

        location / {
                try_files $uri /index.php;
        }

	location ~ \.php$ {
            fastcgi_pass unix:/var/run/php/php7.4-fpm.sock;
	}

	location ~ /\. { deny  all; }
}

